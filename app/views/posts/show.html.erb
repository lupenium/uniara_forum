<%- model_class = Post -%>
<div class="page-header">
  <h1><%= @post.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @post.user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= @post.category.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= raw @post.content %></dd>
</dl>

<%= render "post_replies", replies: @post.replies %>

<%= simple_form_for [@post, @reply] do |f| %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>